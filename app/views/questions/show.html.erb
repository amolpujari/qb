<h3>Question: </h3>

<div class="well">
  <p>
    <%= @question.title %>
    <br/><i>by <%=@question.user.email%></i>
  </p>
  <p>
    <%= @question.statement.body.html_safe %>
  </p>
  <p>
    Complexity: <%= @question.complexity %>
  </p>
  <p>
    Topic: <%= @question.topic %>
  </p>
  <p>
    <%= raw attachments_show @question.statement %>
  </p>

</div>

<p>
  <%= link_to "Edit", edit_question_path(@question), :class => 'btn' %> |
  <%= link_to "Destroy", @question, :confirm => 'Are you sure?', :method => :delete, :class => 'btn' %> |
  <%= link_to "View All", questions_path, :class => 'btn btn-danger' %>
</p>